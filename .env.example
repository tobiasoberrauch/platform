# Production Configuration
# Copy this file to .env.local for development or set these in your deployment environment

# Base URL for production deployment
NEXT_PUBLIC_BASE_URL=https://app.clevercsrd.ai

# Development URLs (automatically used when NODE_ENV=development)
# Platform: http://localhost:3000
# Benchmark: http://localhost:3001  
# CSRD: http://localhost:3002
# Support: http://localhost:3003

# In production, the apps will be served at:
# Platform: https://app.clevercsrd.ai
# Benchmark: https://app.clevercsrd.ai/benchmark
# CSRD: https://app.clevercsrd.ai/csrd  
# Support: https://app.clevercsrd.ai/support

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# Cidaas OIDC Configuration
CIDAAS_CLIENT_ID=...
CIDAAS_CLIENT_SECRET=...

# Supabase Configuration (for NextAuth adapter)
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
